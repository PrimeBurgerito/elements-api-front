#!/usr/bin/env groovy

pipeline {
    agent {
        docker {
            image 'node:latest'
            args '-v /var/www/elements/html:/tmp/app -u root'
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                dir('elements-webapp') {
                    try {
                        sh 'npm install'
                        sh 'npm run build'
                    } catch (e) {
                        echo e
                        sh 'tail -f $(/bin/ls -1t /root/.npm/_logs/* | /bin/sed q)'
                    }
                    sh 'mv build/* /tmp/app/'
                }
            }
        }
    }
}
